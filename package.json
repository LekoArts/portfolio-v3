{
	"name": "portfolio-v3",
	"type": "module",
	"version": "0.0.1",
	"packageManager": "pnpm@10.4.1",
	"scripts": {
		"bootstrap": "pnpm install && pnpm rs:build && pnpm playwright:init",
		"dev": "astro dev",
		"build": "astro build",
		"build:e2e": "cross-env IS_PLAYWRIGHT=true astro build",
		"preview": "astro preview",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"lint:title-case": "./scripts/target/release/lint-title-case",
		"test:watch": "vitest watch",
		"test": "vitest run",
		"test:e2e": "pnpm build:e2e && pnpm e2e:build",
		"playwright:init": "playwright install chromium",
		"e2e:dev": "cross-env IS_PLAYWRIGHT=true playwright test --ui",
		"e2e:build": "cross-env IS_PLAYWRIGHT=true IS_BUILD=true playwright test",
		"rs:build": "cd scripts && cargo build --release",
		"new-garden": "./scripts/target/release/garden",
		"new-post": "./scripts/target/release/post"
	},
