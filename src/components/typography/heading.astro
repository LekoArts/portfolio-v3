---
import { type Headings, headingVariants } from '@styles/typography.css'
import Box, { type BoxProps } from '@components/primitives/box.astro'

interface Props extends BoxProps<Headings> {
	as: Headings
}

const { as, class: className, ...rest } = Astro.props
---

<Box as={as} class:list={[headingVariants[as], className]} {...rest}
	><slot /></Box
>
