---
import type { Atoms } from '@styles/atoms.css'
import Box, { type BoxProps } from '@components/primitives/box.astro'

interface Props extends BoxProps<'span'> {
	size: Atoms['width']
	axis: 'vertical' | 'horizontal'
}

const { size, axis, ...rest } = Astro.props
const width = axis === `vertical` ? `px` : size
const height = axis === `horizontal` ? `px` : size
---

<Box as="span" width={width} height={height} minWidth={width} minHeight={height} display="block" {...rest} />
