---
import Box from '@components/primitives/box.astro'
import Link from '@components/primitives/link.astro'
import Text from '@components/typography/text.astro'
import { cardStyle, headingStyle, linkStyle, linkTargetStyle } from './card.css'
import type { CardProps } from '@constants/types'

interface Props extends CardProps {}

const { slug, title, subtitle, description } = Astro.props
---

<Box p={6} borderRadius="lg" bg="cardBg" class={cardStyle}>
	<Link href={slug} class={linkStyle}>
		<Text as="h2" fontSize="lgx" fontWeight="bold" color="heading" class={headingStyle}>
			{title}
		</Text>
		{
			subtitle && (
				<Text as="h3" fontSize="lg" fontWeight="medium" color="textMuted">
					{subtitle}
				</Text>
			)
		}
		<Text marginTop={6}>{description}</Text>
		<span class={linkTargetStyle}></span>
	</Link>
</Box>
