---
import { SKIP_NAV_ID } from '@constants/a11y'
import { skipNavLinkStyle } from './skip-nav.css'
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'a'> {
	contentId?: string
}

const { contentId, ...rest } = Astro.props
const id = contentId || SKIP_NAV_ID
---

<a {...rest} class={skipNavLinkStyle} href={`#${id}`}><slot>Skip to content</slot></a>
