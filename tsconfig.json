{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"baseUrl": ".",
		"paths": {
			"@assets/*": [
				"src/assets/*"
			],
			"@components/*": [
				"src/components/*"
			],
			"@constants/*": [
				"src/constants/*"
			],
			"@data/*": [
				"src/data/*"
			],
			"@layouts/*": [
				"src/layouts/*"
			],
			"@styles/*": [
				"src/styles/*"
			],
			"@utils/*": [
				"src/utils/*"
			]
		},
		"types": [
			"vitest/globals"
		]
	}
}
